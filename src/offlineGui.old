block_cipher = None

a = Analysis(['offlineGui.py'],
             pathex=['.'],
             binaries=[],
             datas=[('/usr/lib/x86_64-linux-gnu/vlc/plugins', 'vlc/plugins')],  # Include VLC plugins
             hiddenimports=[],
             hookspath=[],
             runtime_hooks=[],
             excludes=[],
             win_no_prefer_redirects=False,
             win_private_assemblies=False,
             cipher=block_cipher,
             noarchive=False)

pyz = PYZ(a.pure, a.zipped_data,
          cipher=block_cipher)

